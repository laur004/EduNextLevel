<h1>Clase<h1>
<hr>
<br />
<a class="btn alert-success" asp-action="New" asp-controller="Grades">Adauga clasa</a>
<br />


        @if (TempData.ContainsKey("message"))
        {
            <h1>@TempData["message"]</h1>
            <br />
        }

        <br />

        @foreach (var grade in ViewBag.Grades)
        {
            <h3>@grade.GradeName</h3>
            <a class="btn alert-success" asp-action="Show" asp-controller="Grades" asp-route-id="@grade.Id">Afisare clase</a>
            <a class="btn alert-success" asp-action="Edit" asp-controller="Grades" asp-route-id="@grade.Id">Editare clase</a>
            <br />

        }
